{% extends 'layout.html.twig' %}

{% block title %}Bienvenue !{% endblock %}

{% block content %}
    <h1>Projets</h1>
    <div class='project-container'>
        {% for project in projects %}
            <a href={{ path('app_project', {'name': project.name}) }}>
                <div class='project-card'>
                    {% if project.imagePath != "" %}
                        <img src="/img/projects/{{project.imagePath}}" />
                    {% endif %}
                    <h2>{{project.name}}</h2>
                </div>
            </a>
            {% endfor %}
    </div>
{% endblock %}
